{
  "name": "ajay/simple-blog-system",
  "description": "A functional blog system with user registration, post management, categories, comments, and admin panel",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Ajay",
      "email": "ajay@simpleblog.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^2.4",
    "phpmailer/phpmailer": "^6.8",
    "intervention/image": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Api\\": "api/",
      "Database\\": "database/"
    },
    "files": [
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8000 -t public/",
    "test": "phpunit",
    "test:unit": "phpunit --testsuite Unit",
    "test:integration": "phpunit --testsuite Integration",
    "lint": "phpcs --standard=PSR12 app/ api/ config/ database/",
    "lint:fix": "phpcbf --standard=PSR12 app/ api/ config/ database/",
    "analyze": "phpstan analyse app/ api/ --level=5"
  },
  "config": {
    "optimize-autoloader": true,
    "prefer-stable": true
  },
  "minimum-stability": "stable"
}
